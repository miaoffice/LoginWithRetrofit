<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miamirecki.loginwithretrofit.LoginActivity"
    android:background="@color/primary">

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@color/primary_light"
        android:elevation="8dp">

        <EditText
            android:id="@+id/etUsernameLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="42dp"
            android:elevation="5dp"
            android:hint="@string/username"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_above="@+id/etPasswordLogin"
            android:layout_alignLeft="@+id/etPasswordLogin"
            android:layout_alignStart="@+id/etPasswordLogin" />

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:elevation="5dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_above="@+id/bLogin"
            android:layout_alignLeft="@+id/bLogin"
            android:layout_alignStart="@+id/bLogin" />

        <Button
            android:id="@+id/bLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:background="@drawable/button_rounded_background"
            android:elevation="8dp"
            android:padding="10dp"
            android:text="@string/login"
            android:textColor="@color/accent"
            android:visibility="visible" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivAccountIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:background="@drawable/icon_rounded_background"
        android:elevation="8dp"
        app:srcCompat="@mipmap/ic_account_circle_white_48dp" />


</FrameLayout>
