<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miamirecki.loginwithretrofit.LoginActivity"
    android:background="#e0e0e0">

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <Spinner
            android:id="@+id/spUsernameLogin"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etPasswordLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:entries="@array/spinnerUsernames"
            android:padding="10dp"
            android:backgroundTint="@color/colorAccent"/>

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"/>

        <Button
            android:id="@+id/bLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:elevation="5dp" />
    </RelativeLayout>


</RelativeLayout>
